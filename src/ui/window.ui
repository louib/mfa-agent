<interface>
  <requires lib="gtk+" version="3.20"/>
  <requires lib="libadwaita" version="0.1"/>
  <object class="AdwApplicationWindow" id="window">
    <property name="can_focus">False</property>
    <property name="modal">True</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar">
            <property name="centering-policy">strict</property>
            <property name="title-widget">
              <object class="AdwViewSwitcherTitle" id="title">
                <property name="stack">stack</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="AdwViewStack" id="stack">
            <property name="vexpand">True</property>
            <child>
              <object class="AdwViewStackPage">
                <property name="name">status</property>
                <property name="title">Status</property>
                <property name="visible">True</property>
                <property name="icon-name">view-list-symbolic</property>
                <property name="badge-number">1</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="title">Welcome!</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage">
                <property name="name">secrets</property>
                <property name="title">Secrets</property>
                <property name="visible">True</property>
                <property name="icon-name">view-list-symbolic</property>
                <property name="badge-number">2</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="title">Here are your secrets!</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage">
                <property name="name">connection</property>
                <property name="title">Connection</property>
                <property name="visible">True</property>
                <property name="icon-name">view-list-symbolic</property>
                <property name="badge-number">3</property>
                <property name="child">
                  <object class="GtkListBox" id="connection_box">
                    <property name="selection-mode">none</property>
                    <property name="name">connection_box</property>
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child>
                      <object class="AdwComboRow">
                        <property name="title">Connection Type</property>
                        <property name="model">
                          <object class="GtkStringList">
                            <items>
                              <item translatable="yes">TCP</item>
                              <item translatable="yes">Bluetooth</item>
                              <item translatable="yes">USB</item>
                            </items>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage">
                <property name="name">settings</property>
                <property name="title">Settings</property>
                <property name="visible">True</property>
                <property name="icon-name">preferences-system-windows</property>
                <property name="badge-number">4</property>
                <property name="child">
                  <object class="GtkListBox" id="settings_box">
                    <property name="selection-mode">none</property>
                    <property name="name">settings_box</property>
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Enable agent</property>
                        <property name="name">enable_agent_row</property>
                        <child>
                          <object class="GtkSwitch" id="enable_agent">
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Enable quick unlock</property>
                        <property name="name">enable_quick_unlock_row</property>
                        <child>
                          <object class="GtkSwitch" id="enable_quick_unlock">
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwViewSwitcherBar">
            <property name="visible">True</property>
            <property name="stack">stack</property>
            <property name="can_focus">False</property>
            <binding name="reveal">
              <lookup name="title-visible">title</lookup>
            </binding>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
